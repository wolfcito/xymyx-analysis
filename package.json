{
  "name": "xymyx-analyzer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run",
    "format": "prettier -w .",
    "test:e2e": "playwright test",
    "playwright:install": "playwright install --with-deps",
    "prepare": "husky"
  },
  "dependencies": {
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3",
    "@playwright/test": "1",
    "@tailwindcss/postcss": "4",
    "@testing-library/jest-dom": "6",
    "@testing-library/react": "16",
    "@testing-library/user-event": "14",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "eslint": "9",
    "eslint-config-next": "15.5.3",
    "husky": "9",
    "jsdom": "25",
    "lint-staged": "15",
    "prettier": "3",
    "tailwindcss": "4",
    "typescript": "5",
    "vitest": "2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier -w",
      "eslint --fix"
    ]
  }
}
